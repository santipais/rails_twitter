<div class="[background:#FFF] mx-auto my-32">
    <div class="flex flex-col items-center justify-center w-[600px] h-[650px] shrink-0 [background:#FFF] shadow-[0px_0px_20px_0px_rgba(0,0,0,0.15)] rounded-[29px]">
      <%= image_tag "twitter.png", class:  "" %>
      <h2 class="heading-2 mb-2.5">Sign in to Twitter</h2>
      <%= form_for(resource, as: resource_name, url: user_session_path, html: { class: "pt-20 px-1 flex flex-col gap-y-5" }, data: {turbo: false}) do |f| %>
        <div class="w-full">
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "input-field" %>
        </div>
        
        <div class="w-full">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "input-field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="w-full">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <%= link_to "Forgot your password?", new_password_path(resource_name),style: "color: #41A2E3;" %>
        <%= f.submit "Log In", class: "btn btn-dark btn-lg mt-20" %>
      <% end %>
    <div> Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), style: "color: #41A2E3;" %> </div>
  </div>
</div>
