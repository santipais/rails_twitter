<%=turbo_frame_tag dom_id(tweet) do%>
    <div class="w-full h-auto border">
        <div class="w-full flex flex-row my-3 mx-4">
            <div class="pr-3 shrink-0">
                <%= link_to (image_tag "profile.png", class: "w-12 h-12 rounded-full"), user_path(tweet.user), data: {turbo_frame: "_top"} %>
            </div>
            <div class="w-[500px] flex flex-col">
                <div class="flex flex-row items-center">
                    <div class="font-semibold text-base pr-1">
                        <%= tweet.user.full_name %>
                    </div>
                    <div class="text-[#5b7083] text-sm font-normal">
                        @<%= tweet.user.username %>
                    </div>
                    <div class="text-[#5b7083] text-sm font-normal ml-auto">
                    Â· <%= posted_ago(tweet) %>
                    </div>
                </div>
                <div class="break-words">
                    <%= tweet.content %>
                </div>
                <%= render "tweets/like", tweet: tweet %>
            </div>
        </div>
    </div>
<%end%>
