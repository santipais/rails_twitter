<%= turbo_frame_tag dom_id(user) do %>
    <div class="w-full h-auto border">
        <div class="w-full flex flex-row my-3 mx-4">
            <div class="pr-3 shrink-0">
                <%= link_to (image_tag "profile.png", class: "w-12 h-12 rounded-full"), user_path(user), data: {turbo_frame: "_top"} %>
            </div>
            <div class="w-[500px] flex flex-col">
                    <div class="font-semibold text-base pr-1">
                        <%= user.full_name %>
                    </div>
                    <div class="text-[#5b7083] text-sm font-normal">
                        @<%= user.username %>
                    </div>
                    <div class="text-[#5b7083] text-sm font-normal ml-auto">
                        <% if current_user.present? %>
                            <%= render "follows/follow", user: user, following_user: user.followed_by_current_user unless current_user?(user) %>
                        <% end %>
                    </div>
                <div class="break-words">
                    <%= user.bio %>
                </div>
            </div>
        </div>
    </div>
<% end %>
